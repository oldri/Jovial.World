<div class="bg-white p-6 rounded-md shadow-md">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-3xl font-bold mb-4">
      <%= @blog_post.title %>
    </h2>
    <%= link_to "Back", root_path, class: "btn bg-gray-500 text-white hover:bg-gray-600 px-4 py-2 rounded-md" %>
  </div>
  
  <p class="text-gray-700 text-lg font-semibold mb-2">By: <%= @blog_post.user.user_name %></p>
  <p class="text-gray-800 text-base leading-relaxed mb-6"><%= @blog_post.body %></p>
  <div class="text-sm text-gray-700 mb-4">
    <p>Written on <%= @blog_post.created_at.strftime("%B %d, %Y") %></p>
    <p><i class="fas fa-heart <%= @blog_post.likes.count.zero? ? 'text-gray-500' : 'text-pink-500' %>"></i> <%= @blog_post.likes.count %></p>
  </div>  
  
  <% if user_signed_in? && @blog_post.user == current_user %>
    <div class="flex mt-4">
      <%= link_to edit_blog_post_path(@blog_post), class: "btn bg-blue-500 text-white hover:bg-gray-600 px-2 py-2 rounded-md mr-2 w-20 text-center" do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= button_to blog_post_path(@blog_post), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn bg-red-500 text-white hover:bg-gray-600 px-2 py-2 rounded-md w-20 text-center" do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
  <% end %>
  
  <% if user_signed_in? %>
    <div class="actions mt-4 flex">
      <%= button_to like_blog_post_path(@blog_post), method: :post, class: 'button mr-2' do %>
        <i class="fas fa-thumbs-up <%= current_user.liked_blog_posts.include?(@blog_post) ? 'text-green-500' : 'text-gray-500' %>"></i>
      <% end %>
      <%= button_to unlike_blog_post_path(@blog_post), method: :delete, class: 'button' do %>
        <i class="fas fa-thumbs-down fa-flip-horizontal <%= current_user.liked_blog_posts.include?(@blog_post) ? 'text-gray-500' : 'text-red-500' %>"></i>
      <% end %>
    </div>
  <% end %>

  <h2 class="mt-6">Comments: <%= @blog_post.comments.count %></h2>
  <% @blog_post.comments.each do |comment| %>
    <div class="mt-4 flex justify-between items-center bg-gray-200 p-2 rounded-md">
      <div>
        <p class="text-gray-800"><strong><%= comment.user.user_name %>:</strong> <%= comment.body %></p>
        <p class="text-gray-600 text-sm">Posted <%= time_ago_in_words(comment.created_at) %> ago</p>      
      </div>
      <% if user_signed_in? && comment.user == current_user %>
        <%= button_to [@blog_post, comment], method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn bg-red-500 text-white hover:bg-gray-600 px-2 py-2 rounded-md" do %>
          <i class="fas fa-times"></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
  
  <% if user_signed_in? %>
    <h3 class="mt-6">Add a Comment</h3>
    <%= form_with(model: [ @blog_post, Comment.new ], local: true) do |form| %>
      <div class="field relative">
        <%= form.text_area :body, rows: 4, class: "w-full p-2 border rounded-md", id: "commentBody" %>
        <span id="charCount" class="text-sm text-gray-500 absolute right-2 top-2">0/1000</span>
      </div>
      <div class="actions mt-4">
        <%= form.submit "Submit Comment", class: "btn text-white px-2 py-2 rounded-md bg-gray-500 hover:bg-gray-600 opacity-50", id: "submit_button", disabled: true %>
      </div>
    <% end %>
  <% else %>
    <p class="mt-6 text-gray-800">
      <strong>Please <%= link_to 'log in', new_user_session_path %> to add comments.</strong>
    </p>
  <% end %>
</div>

<script>
  var commentInput = document.getElementById('commentBody');
  var submitButton = document.getElementById('submit_button');
  var charCount = document.getElementById('charCount');

  commentInput.addEventListener('input', function(e) {
    var commentLength = e.target.value.trim().length;
    charCount.textContent = commentLength + '/1000';
    
    charCount.classList.toggle('text-red-500', !(commentLength >= 5 && commentLength <= 1000));

    if (commentLength >= 5 && commentLength <= 1000) {
      submitButton.disabled = false;
      submitButton.classList.remove('bg-gray-500', 'hover:bg-gray-600', 'opacity-50');
      submitButton.classList.add('bg-green-500', 'hover:bg-green-600');
    } else {
      submitButton.disabled = true;
      submitButton.classList.remove('bg-green-500', 'hover:bg-green-600');
      submitButton.classList.add('bg-gray-500', 'hover:bg-gray-600', 'opacity-50');
    }
  });

  if (commentInput.value.trim().length >= 5 && commentInput.value.trim().length <= 1000) {
    submitButton.disabled = false;
    submitButton.classList.remove('bg-gray-500', 'hover:bg-gray-600', 'opacity-50');
    submitButton.classList.add('bg-green-500', 'hover:bg-green-600');
  }
</script>
